<Page
    x:Class="PUBGNetworkMonitor.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PUBGNetworkMonitor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.UI.Xaml.Media"
    Loaded="DashboardPage_Loaded"
    mc:Ignorable="d">

    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.0" Color="#FF505050" />
            <!--  Dark Gray  -->
            <GradientStop Offset="0.5" Color="#FF696969" />
            <!--  Dim Gray  -->
            <GradientStop Offset="1.0" Color="#FF808080" />
            <!--  Medium Gray  -->
        </LinearGradientBrush>
    </Page.Background>

    <Grid>
        <!--  Outer Container for all content  -->
        <StackPanel
            Margin="0,-50,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <!--  Main Content Container  -->
            <StackPanel
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <!--  Logo  -->
                <Image
                    Width="100"
                    Height="100"
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    Source="ms-appx:///Assets/monitoring-system.png"
                    Stretch="Uniform" />

                <!--  Messages Container  -->
                <StackPanel VerticalAlignment="Center">

                    <!--  Ready Message  -->
                    <StackPanel
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Border
                            Width="30"
                            Height="30"
                            Margin="0,0,5,0"
                            CornerRadius="15">
                            <FontIcon Foreground="#4CAF50" Glyph="&#xEC61;" />
                        </Border>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="Ready" />
                    </StackPanel>

                </StackPanel>
            </StackPanel>

            <!--  Instruction Message  -->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Border
                    Width="30"
                    Height="30"
                    Margin="0,0,10,0"
                    CornerRadius="15">
                    <FontIcon Foreground="orange" Glyph="&#xF167;" />
                </Border>

                <TextBlock
                    MaxWidth="400"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="Before Exiting to Lobby, press the Network button located in the bottom-left corner of PUBG to fix loading smoke screen!"
                    TextWrapping="Wrap" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
