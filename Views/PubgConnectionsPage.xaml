<Page
    x:Class="PUBGNetworkMonitor.Views.PubgConnectionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:PUBGNetworkMonitor.Models"
    xmlns:viewmodels="using:PUBGNetworkMonitor.ViewModels">

    <ScrollViewer>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header with PUBG Branding  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,5"
                Orientation="Horizontal"
                Spacing="12">
                <Border
                    Padding="6,3"
                    Background="{StaticResource PubgOrangeBrush}"
                    CornerRadius="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon
                            FontSize="16"
                            Foreground="White"
                            Glyph="&#xE7FC;" />
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="PUBG NETWORK MONITOR" />
                    </StackPanel>
                </Border>
                <ProgressRing
                    Width="24"
                    Height="24"
                    VerticalAlignment="Center"
                    IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />
            </StackPanel>






            <!--  Connection Log Display  -->
            <Border
                Grid.Row="1"
                Margin="0,0,0,20"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Visibility="{x:Bind ViewModel.IsLogVisible, Mode=OneWay}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Log Header  -->
                    <Border
                        Grid.Row="0"
                        Padding="16,12"
                        Background="{StaticResource PubgOrangeBrush}"
                        CornerRadius="8,8,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon
                                FontSize="16"
                                Foreground="White"
                                Glyph="&#xE7C3;" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Connection Close Log" />
                        </StackPanel>
                    </Border>

                    <!--  Log Content  -->
                    <ScrollViewer
                        Grid.Row="1"
                        MaxHeight="300"
                        Padding="16"
                        VerticalScrollBarVisibility="Auto"
                        VerticalScrollMode="Auto">
                        <ListView ItemsSource="{x:Bind ViewModel.ConnectionLog, Mode=OneWay}" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="x:String">
                                    <TextBlock
                                        Padding="4,2"
                                        FontFamily="Consolas"
                                        FontSize="12"
                                        Text="{x:Bind}"
                                        TextWrapping="NoWrap" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!--  Status Bar  -->
            <Border
                Grid.Row="2"
                Margin="0,16,0,0"
                Padding="16,12"
                Background="{ThemeResource SystemControlBackgroundAltMediumBrush}"
                CornerRadius="6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Style="{StaticResource StatusTextStyle}"
                        Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" />
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>