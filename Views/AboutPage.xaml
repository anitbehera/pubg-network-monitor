<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="PUBGNetworkMonitor.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PUBGNetworkMonitor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="32">

            <!--  Header with App Version and Feedback Hyperlink  -->
            <StackPanel
                HorizontalAlignment="Left"
                Orientation="Horizontal"
                Spacing="16">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="v1.0.1" />
            </StackPanel>

            <!--  Tabular Format for Both Sections  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Section Headers  -->
                <Border
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    Padding="16,12"
                    Background="{ThemeResource SystemControlBackgroundAltMediumBrush}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="Orange"
                        Text="What this App Does" />
                </Border>

                <Border
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    Padding="16,12"
                    Background="{ThemeResource SystemControlBackgroundAltMediumBrush}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="Orange"
                        Text="What Doesn't" />
                </Border>

                <!--  Section Content  -->
                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    Padding="16"
                    Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                    BorderBrush="{ThemeResource SystemControlBackgroundAltMediumBrush}"
                    BorderThickness="1,0,1,1">
                    <StackPanel Spacing="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                Grid.Column="0"
                                Margin="0,2,8,0"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Foreground="Green"
                                Glyph="&#xE73E;" />
                            <TextBlock
                                Grid.Column="1"
                                FontSize="14"
                                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                Text="Display an overlay on top of PUBG Window to fix loading smoke screen."
                                TextWrapping="Wrap" />
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                Grid.Column="0"
                                Margin="0,2,8,0"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Foreground="Green"
                                Glyph="&#xE73E;" />
                            <TextBlock
                                Grid.Column="1"
                                FontSize="14"
                                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                Text="Identifies connections to PUBG Lobby server and closes them."
                                TextWrapping="Wrap" />
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                Grid.Column="0"
                                Margin="0,2,8,0"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Foreground="Green"
                                Glyph="&#xE73E;" />
                            <TextBlock
                                Grid.Column="1"
                                FontSize="14"
                                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                Text="Display logs of closed connections under the Logs menu."
                                TextWrapping="Wrap" />
                        </Grid>
                    </StackPanel>
                </Border>

                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    Padding="16"
                    Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                    BorderBrush="{ThemeResource SystemControlBackgroundAltMediumBrush}"
                    BorderThickness="1,0,1,1">
                    <StackPanel Spacing="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                Grid.Column="0"
                                Margin="0,2,8,0"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Foreground="Red"
                                Glyph="&#xE711;" />
                            <TextBlock
                                Grid.Column="1"
                                FontSize="14"
                                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                Text="Doesn't collect any data."
                                TextWrapping="Wrap" />
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <FontIcon
                                Grid.Column="0"
                                Margin="0,2,8,0"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Foreground="Red"
                                Glyph="&#xE711;" />
                            <TextBlock
                                Grid.Column="1"
                                FontSize="14"
                                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                Text="Doesn't inject anything into PUBG Game."
                                TextWrapping="Wrap" />
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>
